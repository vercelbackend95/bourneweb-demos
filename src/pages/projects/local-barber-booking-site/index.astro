---
import Layout from "./Layout.astro";
---

<Layout
  title="Westcliff Barber · Booking Demo"
  description="Local barber booking demo (self-contained)."
>
  <main id="main">
     <!-- TOP NAV -->
    <header class="sticky top-0 z-50">
      <div class="border-b border-white/10 bg-black/20 backdrop-blur">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-5">
          <!-- brand -->
          <a href="#" class="flex flex-col leading-tight">
            <span class="bb-brand text-[18px] font-semibold text-white/85">
              South Coast Barber Club
            </span>
            <span class="text-[12px] text-white/40">
              Moordown · Bournemouth · BH9
            </span>
          </a>

          <!-- nav -->
          <nav class="hidden items-center gap-10 text-[14px] text-white/70 md:flex">
            <a class="hover:text-white/90" href="#services">Services</a>
            <a class="hover:text-white/90" href="#barbers">Barbers</a>
            <a class="hover:text-white/90" href="#visit">Visit</a>
            <a class="hover:text-white/90" href="#faq">FAQ</a>
          </nav>

          <!-- CTA -->
          <a
            href="#book"
            class="rounded-full bg-[var(--bb-gold)] px-6 py-2.5 text-[14px] font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)] hover:brightness-95"
          >
            Book online
          </a>
        </div>
      </div>
    </header>
    <!-- HERO -->
    <section class="mx-auto max-w-6xl px-6 pb-20 pt-12 md:pb-28 md:pt-16">
      <div class="grid gap-12 md:grid-cols-2 md:items-center">
        <!-- LEFT -->
        <div>
          <div class="inline-flex items-center rounded-full border border-[color:rgba(215,171,114,.25)] bg-[color:rgba(215,171,114,.08)] px-4 py-2 text-[12px] font-semibold tracking-[0.22em] text-[var(--bb-gold)]">
            BARBER&nbsp;&nbsp;·&nbsp;&nbsp;BOURNEMOUTH&nbsp;&nbsp;·&nbsp;&nbsp;UK
          </div>

          <h1 class="bb-brand mt-6 text-balance text-[56px] font-semibold leading-[0.92] tracking-tight text-white/90 md:text-[66px]">
            Cuts that actually suit
            <br />
            your head.
          </h1>

          <p class="mt-6 max-w-xl text-base leading-relaxed text-white/60">
            Modern fades, classic scissor cuts, and honest beard work.
            No rushed clips. No upsell games. Just quality cuts from
            barbers who give a damn.
          </p>

          <div class="mt-10 flex flex-wrap items-center gap-4">
            <a
              href="#book"
              class="rounded-full bg-[var(--bb-gold)] px-8 py-3.5 text-sm font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)] hover:brightness-95"
            >
              Book online
            </a>

            <a
              href="tel:+447785744005"
              class="inline-flex items-center gap-3 rounded-full border border-white/14 bg-white/5 px-7 py-3.5 text-sm font-semibold text-white/80 shadow-[0_18px_70px_rgba(0,0,0,0.25)] backdrop-blur hover:bg-white/8"
            >
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-white/75">
                <path d="M8 3l3 6-2 2c1.5 3 3.5 5 6.5 6.5l2-2 6 3-2 4c-1 1-3 1-4.5.5C9.5 21 3 14.5 1.5 7.5 1 6 1 4 2 3l6 0Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              </svg>
              Call the shop
            </a>
          </div>

          <p class="mt-12 text-sm text-white/45">
            Open today · <span class="text-white/60">10:00 – 19:00</span> · Walk-ins welcome
          </p>
        </div>

        <!-- RIGHT -->
        <div class="md:justify-self-end">
          <div class="relative h-[520px] w-full max-w-[520px] overflow-hidden rounded-[32px] border border-white/12 bg-white/[0.04] shadow-[0_28px_120px_rgba(0,0,0,0.55)] backdrop-blur">
            <div
              class="pointer-events-none absolute inset-0 opacity-70"
              style="background: radial-gradient(900px 520px at 55% 0%, rgba(255,255,255,0.06), transparent 62%);"
            ></div>

            <div class="relative grid h-full place-items-center px-10 text-center">
              <div class="grid place-items-center">
                <div class="grid h-20 w-20 place-items-center rounded-2xl border border-[color:rgba(215,171,114,.22)] bg-[color:rgba(215,171,114,.08)]">
                  <!-- scissors -->
                  <svg width="44" height="44" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.65)]">
                    <path d="M7 7a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M17 11a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M9 11l6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M9 13l6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </div>

                <div class="mt-10 text-[12px] font-semibold tracking-[0.18em] text-white/35">
                  PREMIUM BARBERING
                </div>

                <div class="mt-4 h-1.5 w-44 rounded-full bg-gradient-to-r from-rose-400/55 via-amber-300/55 to-cyan-300/55"></div>
              </div>
            </div>

            <div class="pointer-events-none absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/25 to-transparent"></div>
          </div>
        </div>
      </div>
    </section>
    <!-- INFO CHIPS -->
    <section class="mx-auto max-w-6xl px-6 pb-16">
      <div class="border-t border-white/10 pt-10">
        <div class="flex flex-wrap items-center gap-3">
          <!-- chip 1 -->
          <div class="inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/5 px-5 py-3 text-sm text-white/65 backdrop-blur">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M7 7a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" stroke="currentColor" stroke-width="2"/>
              <path d="M17 11a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" stroke="currentColor" stroke-width="2"/>
              <path d="M9 11l6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M9 13l6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span>Skin fades · Scissor cuts · Beards</span>
          </div>

          <!-- chip 2 -->
          <div class="inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/5 px-5 py-3 text-sm text-white/65 backdrop-blur">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 22a10 10 0 1 0 0-20 10 10 0 0 0 0 20Z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <span>Late appointments Thu &amp; Fri</span>
          </div>

          <!-- chip 3 -->
          <div class="inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/5 px-5 py-3 text-sm text-white/65 backdrop-blur">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M3 7h18v10H3V7Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              <path d="M3 10h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M7 14h3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span>Card, contactless &amp; cash</span>
          </div>
        </div>
      </div>
    </section>
    <!-- DETAILS ROW -->
    <section class="mx-auto max-w-6xl px-6 pb-18 md:pb-22">
      <div class="grid gap-10 border-t border-white/10 pt-10 md:grid-cols-4 md:gap-8">
        <!-- Location -->
        <div class="flex items-start gap-4">
          <div class="mt-0.5 grid h-10 w-10 place-items-center rounded-2xl border border-white/10 bg-white/5">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M12 22s7-4.5 7-12a7 7 0 1 0-14 0c0 7.5 7 12 7 12Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              <path d="M12 10.5a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>

          <div>
            <div class="text-[11px] font-semibold tracking-[0.22em] text-white/35">
              LOCATION
            </div>
            <div class="mt-1 text-sm font-semibold text-white/80">
              Wimborne Road, Moordown · BH9
            </div>
          </div>
        </div>

        <!-- Hours -->
        <div class="flex items-start gap-4">
          <div class="mt-0.5 grid h-10 w-10 place-items-center rounded-2xl border border-white/10 bg-white/5">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 22a10 10 0 1 0 0-20 10 10 0 0 0 0 20Z" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>

          <div>
            <div class="text-[11px] font-semibold tracking-[0.22em] text-white/35">
              HOURS
            </div>
            <div class="mt-1 text-sm font-semibold text-white/80">
              Tue–Sat · 10:00 – 19:00
            </div>
          </div>
        </div>

        <!-- Walk-ins -->
        <div class="flex items-start gap-4">
          <div class="mt-0.5 grid h-10 w-10 place-items-center rounded-2xl border border-white/10 bg-white/5">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="M4 20a8 8 0 0 1 16 0" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>

          <div>
            <div class="text-[11px] font-semibold tracking-[0.22em] text-white/35">
              WALK-INS
            </div>
            <div class="mt-1 text-sm font-semibold text-white/80">
              Welcome, but bookings get priority
            </div>
          </div>
        </div>

        <!-- Same-day slots -->
        <div class="flex items-start gap-4">
          <div class="mt-0.5 grid h-10 w-10 place-items-center rounded-2xl border border-white/10 bg-white/5">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
              <path d="M7 3v3M17 3v3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M4 7h16v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              <path d="M8 12h4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>

          <div>
            <div class="text-[11px] font-semibold tracking-[0.22em] text-white/35">
              SAME-DAY SLOTS
            </div>
            <div class="mt-1 text-sm font-semibold text-white/80">
              Often available
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- SERVICES / PRICE GRID -->
    <section id="services" class="mx-auto max-w-6xl px-6 pb-24 pt-10 md:pb-28">
      <h2 class="bb-brand text-[44px] font-semibold tracking-tight text-white/90 md:text-[52px]">
        What we actually do well.
      </h2>

      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {[
          {
            title: "Skin Fade",
            desc: "Precision fade work from high to low, blended sharp.",
            time: "45 min",
            price: "£24",
            accent: "rgba(244,63,94,.70)", // red
          },
          {
            title: "Scissor Cut",
            desc: "Classic scissor-over-comb technique for natural texture.",
            time: "35 min",
            price: "£22",
            accent: "rgba(215,171,114,.70)", // gold
          },
          {
            title: "Clipper Cut",
            desc: "Clean all-over grade, perfect for low maintenance.",
            time: "20 min",
            price: "£16",
            accent: "rgba(59,130,246,.70)", // blue
          },
          {
            title: "Beard Trim & Shape",
            desc: "Hot towel prep, precise shaping and line-up work.",
            time: "20 min",
            price: "£14",
            accent: "rgba(244,63,94,.70)", // red
          },
          {
            title: "Full Restyle",
            desc: "Complete transformation with consultation included.",
            time: "60 min",
            price: "£32",
            accent: "rgba(215,171,114,.70)", // gold
          },
          {
            title: "Student Cut",
            desc: "Quality cuts at student prices with valid ID.",
            time: "30–45 min",
            price: "from £18",
            accent: "rgba(59,130,246,.70)", // blue
          },
        ].map((s) => (
          <article
            class="group relative overflow-hidden rounded-[22px] border border-white/10 bg-white/[0.035] px-7 py-7 shadow-[0_26px_120px_rgba(0,0,0,0.45)] transition duration-200 hover:border-white/20 hover:bg-white/[0.05]"
            style={`--acc:${s.accent};`}
          >
            {/* subtle top glow (jak na screenie: miękki highlight u góry) */}
            <div
              class="pointer-events-none absolute inset-0 opacity-70"
              style="background: radial-gradient(900px 520px at 50% 0%, rgba(255,255,255,0.05), transparent 62%);"
            />

            {/* RIGHT ACCENT BAR: krótki → pełna wysokość na hover */}
            <span
              class="absolute right-0 top-0 h-[54px] w-[3px] rounded-full bg-[var(--acc)] opacity-80 transition-[height] duration-300 ease-out group-hover:h-full"
            />

            <div class="relative">
              <h3 class="bb-brand text-[30px] font-semibold leading-[1.05] text-white/90">
                {s.title}
              </h3>

              <p class="mt-3 text-sm leading-relaxed text-white/55">
                {s.desc}
              </p>

              <div class="mt-6 h-px bg-white/10"></div>

              <div class="mt-5 flex items-center justify-between text-sm">
                <span class="text-white/45">{s.time}</span>
                <span class="font-semibold text-[var(--bb-gold)]">{s.price}</span>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
    <!-- VALUE PROPS -->
    <section class="mx-auto max-w-6xl px-6 pb-24 pt-8 md:pb-28">
      <div class="grid gap-12 md:grid-cols-2 md:items-start">
        <!-- LEFT TEXT -->
        <div>
          <h2 class="bb-brand text-balance text-[44px] font-semibold leading-[1.05] tracking-tight text-white/90 md:text-[52px]">
            For people who hate rushed cuts.
          </h2>

          <p class="mt-7 max-w-xl text-base leading-relaxed text-white/60">
            This shop is for busy professionals, dads, students—anyone who wants a reliable,
            same-barber experience without the waiting room chaos or 10-minute clips.
          </p>

          <p class="mt-6 max-w-xl text-base leading-relaxed text-white/60">
            We keep it simple: book your slot, show up, get a proper cut from someone who knows
            what they're doing. No corporate chain feel, no pressure to buy products you don't need.
          </p>

          <p class="mt-8 text-base font-semibold text-[var(--bb-gold)]">
            Just honest barbering in Bournemouth.
          </p>
        </div>

        <!-- RIGHT CARDS -->
        <div class="grid gap-6 md:grid-cols-2">
          {[
            {
              icon: "calendar",
              title: "Easy online booking and reminders",
              desc: "Book 24/7, get SMS reminders, never miss your slot.",
            },
            {
              icon: "clock",
              title: "No rushed 10-minute clips",
              desc: "We allocate proper time for each service, every time.",
            },
            {
              icon: "money",
              title: "Honest pricing, no upsell games",
              desc: "What you see is what you pay. No hidden extras.",
            },
            {
              icon: "music",
              title: "Good music, calm vibe, talk or don't talk",
              desc: "Comfortable atmosphere whether you want chat or quiet.",
            },
          ].map((c) => (
            <article class="group rounded-[20px] border border-white/10 bg-white/[0.03] p-6 shadow-[0_24px_110px_rgba(0,0,0,0.45)] backdrop-blur transition duration-200 hover:-translate-y-0.5 hover:border-white/20 hover:bg-white/[0.045]">
              <div class="flex items-start gap-4">
                <div class="grid h-11 w-11 place-items-center rounded-2xl border border-white/10 bg-white/5">
                  {c.icon === "calendar" && (
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
                      <path d="M7 3v3M17 3v3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                      <path d="M4 7h16v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                      <path d="M4 10h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                  )}

                  {c.icon === "clock" && (
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
                      <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M12 22a10 10 0 1 0 0-20 10 10 0 0 0 0 20Z" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  )}

                  {c.icon === "money" && (
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
                      <path d="M12 1v22" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                      <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7H14a3.5 3.5 0 0 1 0 7H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  )}

                  {c.icon === "music" && (
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[color:rgba(215,171,114,.85)]">
                      <path d="M9 18a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" stroke="currentColor" stroke-width="2"/>
                      <path d="M19 16a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" stroke="currentColor" stroke-width="2"/>
                      <path d="M9 18V6l12-2v12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  )}
                </div>

                <div>
                  <h3 class="text-sm font-semibold leading-snug text-white/90">
                    {c.title}
                  </h3>
                  <p class="mt-2 text-sm leading-relaxed text-white/55">
                    {c.desc}
                  </p>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

  </main>
</Layout>
