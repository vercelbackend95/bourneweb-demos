---
import "./_booking.css";
import BookingWidget from "../../../BookingWidget.tsx";
---

<section class="bm-book" id="book" aria-label="Booking">
  <div class="bm-book__wrap">
    <header class="bm-book__head">
      <p class="bm-book__kicker">BOOK ONLINE</p>
      <h2 class="bm-book__title">Book fast. Look sharp.</h2>
      <p class="bm-book__sub">Pay at the shop. We’ll text to confirm — no marketing.</p>
    </header>

    <!-- React widget: client-only = no SSR/build drama -->
    <BookingWidget client:only="react" />
  </div>
</section>
